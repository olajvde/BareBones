    <label for="exampleInputPassword1" class="form-label">Body</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" name="body"  ></textarea>
  </div>
  
  <button type="submit" class="btn btn-primary">Post!</button>
</form>
